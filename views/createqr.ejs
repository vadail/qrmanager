          <div class="span4">

            <fieldset>
              <legend>Target 1<button class="btn btn-danger" style="float: right" type="button"><i class="icon-trash icon-white"></i></button></legend>
              <label>Country</label>
              <select class="country">
                <option>Any</option>
                <option>Spain</option>
                <option>Mexico</option>
                <option>USA</option>
                <option>Perú</option>
                <option>Colombia</option>
                <option>Puerto Rico</option>
              </select>

              <label>Platform</label>
                <select class="platform">
                  <option>Any</option>
                  <option>Android</option>
                  <option>iPhone</option>
                  <option>iPad</option>
                  <option>Blackberry</option>
                  <option>WindowsPhone</option>
                </select>

              <label>URL</label>
              <input class="url" type="text" placeholder="http://www...">       
              
            </fieldset>

          </div>

          <div class="span4">

            <fieldset>
              <legend>Target 2<button class="btn btn-danger" style="float: right" type="button"><i class="icon-trash icon-white"></i></button></legend>
              <label>Country</label>
              <select class="country">
                <option>Any</option>
                <option>Spain</option>
                <option>Mexico</option>
                <option>USA</option>
                <option>Perú</option>
                <option>Colombia</option>
                <option>Puerto Rico</option>
              </select>

              <label>Platform</label>
                <select class="platform">
                  <option>Any</option>
                  <option>Android</option>
                  <option>iPhone</option>
                  <option>iPad</option>
                  <option>Blackberry</option>
                  <option>WindowsPhone</option>
                </select>

              <label>URL</label>
              <input class="url" type="text" placeholder="http://www...">       
              
            </fieldset>

          </div>

          <div class="span4">

            <fieldset>
              <legend>Target 3<button class="btn btn-danger" style="float: right" type="button"><i class="icon-trash icon-white"></i></button></legend>
              <label>Country</label>
              <select class="country">
                <option>Any</option>
                <option>Spain</option>
                <option>Mexico</option>
                <option>USA</option>
                <option>Perú</option>
                <option>Colombia</option>
                <option>Puerto Rico</option>
              </select>

              <label>Platform</label>
                <select class="platform">
                  <option>Any</option>
                  <option>Android</option>
                  <option>iPhone</option>
                  <option>iPad</option>
                  <option>Blackberry</option>
                  <option>WindowsPhone</option>
                </select>

              <label>URL</label>
              <input class="url" type="text" placeholder="http://www...">       
              
            </fieldset>

          </div>
        </div>
        
      </fieldset>
    </form>
  </section>
  <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
  <script>

  $('#qr_form').submit(function() {

    var jsonRequest = {}; //declare JsonRequest
    var jsonTargets = []; //declare Targets
    var folder = $("#folder_input").val(); //declare Targets
    
    for (var i = 0; i < $('select.country').length; i++) {
      country_select = $('select.country')[i];
      platform_select = $('select.platform')[i];
      url_input = $('input.url')[i];
      country=country_select.options[country_select.selectedIndex].value;
      platform=platform_select.options[platform_select.selectedIndex].value.toLowerCase();
      url=url_input.value.toLowerCase();
      console.log(country);
      console.log(platform);
      console.log(url);
      jsonTargets.push({"country": country, "platform": platform, "url": url});
    
    };

    jsonRequest = {"_id": "12aASd13", "folder": folder,"url": "","targets":jsonTargets};

    jQuery.post("/api/qrs",jsonRequest, function(data, textStatus, jqXHR) {
      console.log("Post resposne:"); console.dir(data); console.log(textStatus); console.dir(jqXHR);
    });

    return false;
  });

