                <span class="add-on" style="background-color: #04c;color: #FFF;text-shadow: 0 1px 0 rgb(0, 0, 0)">www.çr.es/</span>
                <input disabled type="text" name="id_input" id="id_input" value="<%= id %>">
              </div>
            </div>
                    
            <label>Folder</label>
            <input type="text" placeholder="Project1" name="folder_input" id="folder_input">
            <br>
            <button class="btn btn-primary" type="button">Add target</button>
          </div>

          <div class="span5">
            <label>&nbsp;</label>
